<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridTest1.View.Menu"
             BackgroundImage="menu.jpg">

  <Grid x:Name="GridImg" HorizontalOptions="FillAndExpand">
    <Grid.RowDefinitions>
      <RowDefinition Height="0.6*"/>
      <RowDefinition Height="0.05*"/>
      <RowDefinition Height="0.1*"/>
      <RowDefinition Height="0.05*"/>
      <RowDefinition Height="0.1*"/>
      <RowDefinition Height="0.1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width ="0.25*"/>
      <ColumnDefinition Width ="0.5*"/>
      <ColumnDefinition Width ="0.25*"/>
    </Grid.ColumnDefinitions>
  <Image Grid.Row="2" x:Name="classic" Grid.Column="1" Source="classic.png" StyleId="cla"/>
  <Image Grid.Row="4" x:Name="pattern" Grid.Column="1" Source="pattern.png" StyleId="pat"/>
  </Grid>
</ContentPage>