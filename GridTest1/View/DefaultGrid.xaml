<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridTest1.View.DefaultGrid">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <Grid BackgroundColor="#011936">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width ="0.5*"/>
      <ColumnDefinition Width ="0.5*"/>
    </Grid.ColumnDefinitions>
    <Label Grid.Row="0" x:Name="d00" Text="Row0Column0" Grid.Column="0" BackgroundColor="#465362" />
    <Label Grid.Row="0" x:Name="d01" Text="Row0Column1" Grid.Column="1" BackgroundColor="#82A3A1"/>
    <Label Grid.Row="1" x:Name="d10" Text="Row1Column0" Grid.Column="0" BackgroundColor="#9FC490" TextColor="#fff"/>
    <Image Grid.Row="1" x:Name="img1" Grid.Column="1" Source="test_grid_img.jpg" />
    <!---<Label Grid.Row="1" x:Name="d11" Text="Row1Column1" Grid.Column="1"/>-->
  </Grid>
</ContentPage>